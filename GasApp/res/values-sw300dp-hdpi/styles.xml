<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="AnimationFade">
        <item name="android:windowEnterAnimation">@anim/inputodown</item>
        <item name="android:windowExitAnimation">@anim/outdowntoup</item>
    </style>

    <style name="clStyle">
        <item name="android:layout_marginTop">4.3dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">125dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="weatherStyle">
        <item name="android:layout_marginTop">4.3dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">125dp</item>
    </style>

    <style name="weatherLeftStyle">
        <item name="android:layout_marginLeft">8.5dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">61dp</item>
    </style>

    <style name="weatherRightStyle">
        <item name="android:layout_marginLeft">8.5dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">61dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="tvDisplayStyle">
        <item name="android:layout_marginTop">8.5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="weatherImgStyle">
        <item name="android:layout_height">37dp</item>
        <item name="android:layout_width">37dp</item>
    </style>

    <style name="tianqiTvStyle">
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="listViewStyle">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>

    <style name="navilayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">9dp</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingStart">9dp</item>
    </style>

    <style name="naviimg">
        <item name="android:layout_width">112dp</item>
        <item name="android:layout_height">78dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:layout_marginTop">14dp</item>
    </style>

</resources>