<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:orientation="horizontal"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/imgGaikuang"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:src="@drawable/xiangmugaikuang" />

    <ImageView
        android:id="@+id/imgJiegou"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:src="@drawable/nengyuanjiegou" />

    <ImageView
        android:id="@+id/imgXiaolv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:src="@drawable/nengyuanxiaolv" />

</LinearLayout>